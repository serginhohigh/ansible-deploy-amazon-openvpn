version: '2.4'
services:
  {{ service_name }}:
    container_name: {{ service_name }}
    image: {{ service_name }}
    restart: always
    volumes:
      - "./openvpn:/etc/openvpn"
    ports:
      - "443:443/tcp"
    healthcheck:
      test: nc -vz 127.0.0.1 443 || exit 1
    cap_add:
      - NET_ADMIN
    cpus: '0.5'
    mem_limit: 200M
    pids_limit: 50
    networks:
      - openvpn

networks:
  openvpn:
    name: openvpn
